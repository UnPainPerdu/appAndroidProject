            app:layout_constraintVertical_bias="0.021" />

        <EditText
            android:id="@+id/et_matosmodification_4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/standart_edit_texte"
            android:hint="@string/et_matosmodification_1"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_matosmodification_5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_matosmodification_6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/standart_vt"
            android:padding="10dp"
            android:text="@string/tv_matosmodification_6"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
