            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/bt_matosmodification_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:onClick="onMatosModificationClickManager"
            android:padding="10dp"
            android:text="@string/bt_matosmodification_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_matosmodification_6"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/bt_matosmodification_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:onClick="onMatosModificationClickManager"
            android:padding="10dp"
            android:text="@string/bt_matosmodification_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_matosmodification_1"
            app:layout_constraintVertical_bias="0.221"
